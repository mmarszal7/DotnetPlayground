<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        Title="Color picker" Height="390" Width="270" Topmost="True" ResizeMode="CanMinimize">
    
    <Grid Margin="15">
        <wpfTool:ColorCanvas Name="ColorPickerControl" HorizontalAlignment="Center" VerticalAlignment="Bottom"></wpfTool:ColorCanvas>
        <Button Content="Pick color" Click="PickColorButton" Height="30" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
    </Grid> 
</Window>
